# Environment Configuration for Render Deployment
NODE_ENV=production

# Ports
BACKEND_PORT=3000

# Database (External Database Service)
DATABASE_URL=postgresql://username:password@your-database-host:5432/ecommerce

# Redis (External Redis Service)
REDIS_URL=redis://username:password@your-redis-host:6379

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Origin (Vercel Frontend URL)
CORS_ORIGIN=https://your-vercel-app.vercel.app

# API Configuration
API_PREFIX=api/v1

# Frontend URL (for server-side redirects, etc.)
FRONTEND_URL=https://your-vercel-app.vercel.app

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourapp.com

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stripe (Optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Frontend URL
FRONTEND_URL=http://localhost:3000
