# Development Environment Variables
# Copy this file to .env.development and adjust as needed

# Application
NODE_ENV=development
APP_PORT=3000

# Database Configuration (External Database)
DATABASE_URL=postgresql://username:password@your-database-host:5432/ecommerce_dev

# Redis Configuration (External Redis Service)
REDIS_URL=redis://username:password@your-redis-host:6379

# JWT Configuration (Development - Not secure!)
JWT_SECRET=dev-jwt-secret-not-secure
JWT_REFRESH_SECRET=dev-refresh-secret-not-secure
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
FRONTEND_URL=http://localhost:3001

# API Configuration
API_PREFIX=api/v1

# Ports (for Docker)
BACKEND_PORT=3000
FRONTEND_PORT=3001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# Optional: Email Configuration (Development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=dev@localhost

# Optional: Cloudinary (Development)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional: Stripe (Development)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret

# Optional: File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
