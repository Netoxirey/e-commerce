# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
APP_PORT=3000

# Database Configuration (External Database)
DATABASE_URL=postgresql://username:password@your-database-host:5432/ecommerce_prod

# Redis Configuration (External Redis Service)
REDIS_URL=redis://username:password@your-redis-host:6379

# JWT Configuration (REQUIRED - Generate strong secrets!)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# API Configuration
API_PREFIX=api/v1

# Ports (for Docker)
BACKEND_PORT=3000
FRONTEND_PORT=3001

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api/v1

# Optional: Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@yourdomain.com

# Optional: Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional: Stripe (Payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Optional: File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
